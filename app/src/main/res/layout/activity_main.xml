<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rainer.taschenrechner.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/dividend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dividend:"
        tools:layout_editor_absoluteY="148dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/divisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divisor:"
        tools:layout_editor_absoluteY="84dp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/buttondividiere"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:text="Dividiere"
        tools:layout_editor_absoluteY="205dp"
        tools:layout_editor_absoluteX="105dp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:text="Output:"
        tools:layout_editor_absoluteY="275dp"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/dividend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteY="65dp"
        tools:layout_editor_absoluteX="105dp" />

    <EditText
        android:id="@+id/divisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="154dp"
        android:layout_height="23dp"
        tools:layout_editor_absoluteY="275dp"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/divisionsrechner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divisionsrechner"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
